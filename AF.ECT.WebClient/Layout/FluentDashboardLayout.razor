@inherits LayoutComponentBase

<style>
    /* Custom scrollbar for Fluent look */
    ::-webkit-scrollbar {
        width: 8px;
        height: 8px;
    }
    ::-webkit-scrollbar-track {
        background: transparent;
    }
    ::-webkit-scrollbar-thumb {
        background: #c1c1c1;
        border-radius: 4px;
    }
    ::-webkit-scrollbar-thumb:hover {
        background: #a8a8a8;
    }
</style>

<div class="bg-background-light dark:bg-background-dark text-[#242424] dark:text-white font-display flex flex-col h-screen overflow-hidden selection:bg-primary/20 selection:text-primary-dark" style="position: absolute; top: 0; left: 0; right: 0; bottom: 0;">
    <!-- CUI Banner (Top) -->
    <div class="bg-[#007a33] text-white text-[10px] font-bold text-center py-0.5 tracking-wider uppercase w-full z-50">
        CUI - Controlled Unclassified Information
    </div>
    <div class="flex flex-1 overflow-hidden">
        <!-- Sidebar Navigation -->
        <aside class="w-64 bg-surface-light dark:bg-surface-dark border-r border-[#e1dfdd] dark:border-gray-700 flex flex-col flex-shrink-0 z-20">
            <div class="p-4 border-b border-[#e1dfdd] dark:border-gray-700 flex items-center gap-3">
                <div class="bg-center bg-no-repeat aspect-square bg-cover rounded-full size-10 shadow-sm" data-alt="Department of the Air Force Logo Abstract" style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuAd2tkd0GHXj_ucV2SMNlsQGSoXiTwxUcjlpXf0jMlL2Oym3NJr44Z05GsP1uA7TXTMkTrcm9Lz5OQsA2yLwUTQ4rEXXC6FHUwg6V9WiM5A0kn4PuGB5xTcWg-2mz3KkivM7ovVSUPgHC0Yc5dCX8kIlTNfJU1brN_7iQJRyA4asBpBlNpCmsltZwtwrqQuxK2TpkpJYslRrYkXPBn8UgLZMwBuJDJ8Nqb6usi8yIhSz6mo62OkWeIPtRCgEtJGrsaOjefFlVlfHxNJ");'></div>
                <div class="flex flex-col">
                    <h1 class="text-primary-dark dark:text-blue-400 text-base font-bold leading-tight">ALOD System</h1>
                    <p class="text-[#605e5c] dark:text-gray-400 text-xs font-normal">Dept. of the Air Force</p>
                </div>
            </div>
            <nav class="flex-1 overflow-y-auto py-4 px-2 flex flex-col gap-1">
                <a class="flex items-center gap-3 px-3 py-2.5 rounded hover:bg-[#edebe9] dark:hover:bg-gray-700 group transition-colors bg-[#eff6fc] dark:bg-blue-900/30" href="/fluent-dashboard">
                    <span class="material-symbols-outlined text-primary dark:text-blue-400 text-[20px]">dashboard</span>
                    <span class="text-primary font-medium text-sm dark:text-blue-400">Dashboard</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2.5 rounded hover:bg-[#edebe9] dark:hover:bg-gray-700 group transition-colors text-[#201f1e] dark:text-gray-200" href="/admin-dashboard">
                    <span class="material-symbols-outlined text-[#605e5c] group-hover:text-primary dark:text-gray-400 text-[20px]">admin_panel_settings</span>
                    <span class="text-sm font-medium">Administration</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2.5 rounded hover:bg-[#edebe9] dark:hover:bg-gray-700 group transition-colors text-[#201f1e] dark:text-gray-200" href="/member-dashboard">
                    <span class="material-symbols-outlined text-[#605e5c] group-hover:text-primary dark:text-gray-400 text-[20px]">person</span>
                    <span class="text-sm font-medium">Member Portal</span>
                </a>
                <div class="px-3 pt-4 pb-2">
                    <p class="text-xs font-semibold text-[#605e5c] dark:text-gray-400 uppercase tracking-wide">Case Management</p>
                </div>
                <a class="flex items-center gap-3 px-3 py-2.5 rounded hover:bg-[#edebe9] dark:hover:bg-gray-700 group transition-colors text-[#201f1e] dark:text-gray-200" href="/lod-details">
                    <span class="material-symbols-outlined text-[#605e5c] group-hover:text-primary dark:text-gray-400 text-[20px]">folder_shared</span>
                    <span class="text-sm font-medium">My LODs</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2.5 rounded hover:bg-[#edebe9] dark:hover:bg-gray-700 group transition-colors text-[#201f1e] dark:text-gray-200" href="/medcon-request">
                    <span class="material-symbols-outlined text-[#605e5c] group-hover:text-primary dark:text-gray-400 text-[20px]">add_circle</span>
                    <span class="text-sm font-medium">Start New LOD</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2.5 rounded hover:bg-[#edebe9] dark:hover:bg-gray-700 group transition-colors text-[#201f1e] dark:text-gray-200" href="#">
                    <span class="material-symbols-outlined text-[#605e5c] group-hover:text-primary dark:text-gray-400 text-[20px]">search</span>
                    <span class="text-sm font-medium">LOD Search</span>
                </a>
                <div class="px-3 pt-4 pb-2">
                    <p class="text-xs font-semibold text-[#605e5c] dark:text-gray-400 uppercase tracking-wide">Legal &amp; Review</p>
                </div>
                <a class="flex items-center gap-3 px-3 py-2.5 rounded hover:bg-[#edebe9] dark:hover:bg-gray-700 group transition-colors text-[#201f1e] dark:text-gray-200" href="#">
                    <span class="material-symbols-outlined text-[#605e5c] group-hover:text-primary dark:text-gray-400 text-[20px]">gavel</span>
                    <span class="text-sm font-medium">Appeals</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2.5 rounded hover:bg-[#edebe9] dark:hover:bg-gray-700 group transition-colors text-[#201f1e] dark:text-gray-200" href="#">
                    <span class="material-symbols-outlined text-[#605e5c] group-hover:text-primary dark:text-gray-400 text-[20px]">shield</span>
                    <span class="text-sm font-medium">SARCs</span>
                </a>
                <div class="mt-auto px-3 pt-4 border-t border-[#e1dfdd] dark:border-gray-700">
                    <a class="flex items-center gap-3 px-3 py-2.5 rounded hover:bg-[#edebe9] dark:hover:bg-gray-700 group transition-colors text-[#201f1e] dark:text-gray-200" href="#">
                        <span class="material-symbols-outlined text-[#605e5c] group-hover:text-primary dark:text-gray-400 text-[20px]">bar_chart</span>
                        <span class="text-sm font-medium">Reporting</span>
                    </a>
                </div>
            </nav>
        </aside>
        <!-- Main Content Area -->
        <main class="flex-1 flex flex-col h-full min-w-0 bg-background-light dark:bg-background-dark relative">
            <!-- Top Header -->
            <header class="h-16 bg-surface-light dark:bg-surface-dark border-b border-[#e1dfdd] dark:border-gray-700 flex items-center justify-between px-6 flex-shrink-0 z-10 shadow-sm">
                <!-- Search Bar -->
                <div class="flex-1 max-w-xl">
                    <div class="relative group">
                        <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-[#605e5c] dark:text-gray-400 group-focus-within:text-primary">
                            <span class="material-symbols-outlined text-[20px]">search</span>
                        </span>
                        <input class="w-full bg-[#f3f2f1] dark:bg-gray-800 text-sm rounded border-transparent focus:border-primary focus:ring-0 focus:bg-white dark:focus:bg-gray-900 transition-all pl-10 py-2 placeholder-[#605e5c] dark:placeholder-gray-500 text-[#201f1e] dark:text-white" placeholder="Search for cases, members, or tasks..." type="text" />
                    </div>
                </div>
                <!-- Right Actions -->
                <div class="flex items-center gap-4 ml-6">
                    <button class="relative p-2 text-[#605e5c] dark:text-gray-400 hover:bg-[#edebe9] dark:hover:bg-gray-700 rounded transition-colors" title="Notifications">
                        <span class="material-symbols-outlined text-[20px]">notifications</span>
                        <span class="absolute top-1.5 right-1.5 size-2 bg-alert-red rounded-full border border-white dark:border-gray-800"></span>
                    </button>
                    <button class="p-2 text-[#605e5c] dark:text-gray-400 hover:bg-[#edebe9] dark:hover:bg-gray-700 rounded transition-colors" title="Settings">
                        <span class="material-symbols-outlined text-[20px]">settings</span>
                    </button>
                    <button class="p-2 text-[#605e5c] dark:text-gray-400 hover:bg-[#edebe9] dark:hover:bg-gray-700 rounded transition-colors" title="Help">
                        <span class="material-symbols-outlined text-[20px]">help</span>
                    </button>
                    <div class="h-8 w-px bg-[#e1dfdd] dark:bg-gray-700 mx-1"></div>
                    <div class="flex items-center gap-3 pl-1 cursor-pointer hover:bg-[#edebe9] dark:hover:bg-gray-700 p-1.5 rounded transition-colors">
                        <div class="text-right hidden sm:block">
                            <p class="text-sm font-semibold text-[#201f1e] dark:text-white leading-none">Maj. Anderson</p>
                            <p class="text-xs text-[#605e5c] dark:text-gray-400 mt-0.5">Medical Officer</p>
                        </div>
                        <div class="bg-center bg-no-repeat bg-cover rounded-full size-9 border border-[#e1dfdd] dark:border-gray-600" data-alt="Profile picture of a military officer" style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuAACxeGTnxN1QPKckTfuSdjIIj-zYcvEZ6nUEtb3MIyL-V6Iyp_cBUrf6-JYjOmhDgXOuxCcFJka-J7_RqqylNjiJ96468i5NPBKIzdLYGPPUEJUOw6fr6hv9sBgnI9hRFvsoZ7XygKVYM-K2W1r6JXeHZ_mGdiG5klgzgUU342wBw-RKtyyNbcQeD-C1iqJNmihPwkvJevgIGhWSu86HWocqn5MV0vEVGKSxAtCqmt5TzJOtMWhdFm3sE4NDt3UhrtpqsdDoykioQG");'></div>
                    </div>
                </div>
            </header>
            
            <!-- Scrollable Content -->
            <div class="flex-1 overflow-y-auto p-6 md:p-8">
                @Body
                
                <div class="mt-12 mb-4 text-center">
                   <p class="text-xs text-[#605e5c] dark:text-gray-500">DoD Warning: This is a Department of Defense computer system. This computer system, including all related equipment, networks, and network devices (specifically including Internet access), are provided only for authorized U.S. Government use.</p>
               </div>
            </div>
        </main>
    </div>
</div>
