@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<RadzenComponents />
<RadzenLayout Style="min-height: 100vh;">
    <AppHeader OnSidebarToggle="@(() => _sidebarExpanded = !_sidebarExpanded)" />
    
    <RadzenSidebar @bind-Expanded="@_sidebarExpanded" Style="width: 260px; padding: 1rem 0.5rem;">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Icon="home" Path="/" Style="margin-bottom: 0.5rem; border-radius: 8px;" />
            <RadzenPanelMenuItem Text="WWD" Icon="work" Expanded="@false">
                <RadzenPanelMenuItem Text="My WWDs" Path="/wwd/my-wwds" />
                <RadzenPanelMenuItem Text="Start New WWD" Path="/wwd/start-new-wwd" />
                <RadzenPanelMenuItem Text="Search" Path="/wwd/search" />
            </RadzenPanelMenuItem>
            
            <RadzenPanelMenuItem Text="P-Waiver" Icon="description" Expanded="@false">
                <RadzenPanelMenuItem Text="My P-Waivers" Path="/pwaiver/my-pwaivers" />
                <RadzenPanelMenuItem Text="Start New P-Waiver" Path="/pwaiver/start-new-pwaiver" />
                <RadzenPanelMenuItem Text="Search" Path="/pwaiver/search" />
            </RadzenPanelMenuItem>
            
            <RadzenPanelMenuItem Text="AGR Certification" Icon="verified" Expanded="@false">
                <RadzenPanelMenuItem Text="My AGRs" Path="/agr/my-agrs" />
                <RadzenPanelMenuItem Text="Start New AGR" Path="/agr/start-new-agr" />
                <RadzenPanelMenuItem Text="Search" Path="/agr/search" />
            </RadzenPanelMenuItem>
            
            <RadzenPanelMenuItem Text="MEB" Icon="medical_services" Expanded="@false">
                <RadzenPanelMenuItem Text="My MEBs" Path="/meb/my-mebs" />
                <RadzenPanelMenuItem Text="Start New MEB" Path="/meb/start-new-meb" />
                <RadzenPanelMenuItem Text="Search" Path="/meb/search" />
            </RadzenPanelMenuItem>
            
            <RadzenPanelMenuItem Text="Specialty Cases" Icon="star_rate" Expanded="@false">
                <RadzenPanelMenuItem Text="INCAP" Icon="person_off" Expanded="@false">
                    <RadzenPanelMenuItem Text="My INCAPs" Path="/incap/my-incaps" />
                    <RadzenPanelMenuItem Text="Start New INCAP" Path="/incap/start-new-incap" />
                    <RadzenPanelMenuItem Text="Search" Path="/incap/search" />
                </RadzenPanelMenuItem>
                
                <RadzenPanelMenuItem Text="BMT Waivers MEPS" Icon="health_and_safety" Expanded="@false">
                    <RadzenPanelMenuItem Text="My BMT Waivers" Path="/bmt/my-bmts" />
                    <RadzenPanelMenuItem Text="Start New" Path="/bmt/start-new-bmt" />
                    <RadzenPanelMenuItem Text="Search" Path="/bmt/search" />
                </RadzenPanelMenuItem>
                
                <RadzenPanelMenuItem Text="Congressionals" Icon="account_balance" Expanded="@false">
                    <RadzenPanelMenuItem Text="My Congressionals" Path="/ci/my-cis" />
                    <RadzenPanelMenuItem Text="Start New" Path="/ci/start-new-ci" />
                    <RadzenPanelMenuItem Text="Search" Path="/ci/search" />
                </RadzenPanelMenuItem>
                
                <RadzenPanelMenuItem Text="BCMR" Icon="gavel" Expanded="@false">
                    <RadzenPanelMenuItem Text="My BCMRs" Path="/bcmr/my-bcmrs" />
                    <RadzenPanelMenuItem Text="Start New BCMR" Path="/bcmr/start-new-bcmr" />
                    <RadzenPanelMenuItem Text="Search" Path="/bcmr/search" />
                </RadzenPanelMenuItem>
                
                <RadzenPanelMenuItem Text="More Cases..." Icon="more_horiz" Expanded="@false">
                    <RadzenPanelMenuItem Text="CMAS" Path="/cmas/my-cmass" />
                    <RadzenPanelMenuItem Text="IRILO" Path="/irilo/my-irilos" />
                    <RadzenPanelMenuItem Text="MMSO" Path="/mmso/my-requests" />
                    <RadzenPanelMenuItem Text="MH" Path="/mh/my-mhs" />
                    <RadzenPanelMenuItem Text="DW" Path="/dw/my-dws" />
                    <RadzenPanelMenuItem Text="NE" Path="/ne/my-nes" />
                    <RadzenPanelMenuItem Text="MO" Path="/mo/my-mos" />
                    <RadzenPanelMenuItem Text="PEPP/AIMWITS" Path="/pepp/my-pepps" />
                    <RadzenPanelMenuItem Text="RS" Path="/rs/my-rss" />
                    <RadzenPanelMenuItem Text="RW" Path="/rw/my-rws" />
                    <RadzenPanelMenuItem Text="PH" Path="/ph/my-phs" />
                    <RadzenPanelMenuItem Text="PSCD" Path="/pscd/my-pscds" />
                </RadzenPanelMenuItem>
            </RadzenPanelMenuItem>
        </RadzenPanelMenu>
    </RadzenSidebar>
    
    <RadzenBody Style="background: var(--rz-base-100, #f8f9fa);">
        <div style="padding: 1.5rem 2rem; max-width: 1600px; margin: 0 auto;">
            @Body
        </div>
    </RadzenBody>
</RadzenLayout>

@code {
    private bool _sidebarExpanded = true;
}
