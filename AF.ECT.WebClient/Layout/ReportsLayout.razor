@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<RadzenComponents />
<RadzenLayout Style="min-height: 100vh;">
    <AppHeader OnSidebarToggle="@(() => _sidebarExpanded = !_sidebarExpanded)" />
    
    <RadzenSidebar @bind-Expanded="@_sidebarExpanded" Style="width: 260px; padding: 1rem 0.5rem;">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Icon="home" Path="/" Style="margin-bottom: 0.5rem; border-radius: 8px;" />
            <RadzenPanelMenuItem Text="Ad Hoc Reporting" Icon="analytics" Path="/reports/ad-hoc-reporting" />
            <RadzenPanelMenuItem Text="Ad Hoc Results" Icon="table_view" Path="/reports/ad-hoc-reporting-results" />
            
            <RadzenPanelMenuItem Text="LOD Reports" Icon="folder" Expanded="false">
                <RadzenPanelMenuItem Text="Case History" Path="/reports/case-history-report" />
                <RadzenPanelMenuItem Text="Category Count" Path="/reports/lod-category-count-report" />
                <RadzenPanelMenuItem Text="Disapproved" Path="/reports/lod-disapproved-report" />
                <RadzenPanelMenuItem Text="Disposition" Path="/reports/lod-disposition-report" />
                <RadzenPanelMenuItem Text="Graph Report" Path="/reports/lod-graph-report" />
                <RadzenPanelMenuItem Text="Metrics - Cases" Path="/reports/lod-metrics-report-lod-cases" />
                <RadzenPanelMenuItem Text="Metrics - Avg Times" Path="/reports/lod-metrics-report-average-times" />
                <RadzenPanelMenuItem Text="Packages Execution" Path="/reports/lod-packages-execution-report" />
                <RadzenPanelMenuItem Text="Physician Cancelled" Path="/reports/lod-physician-cancelled-report" />
                <RadzenPanelMenuItem Text="PM Compliance" Path="/reports/lod-pm-compliance-report" />
                <RadzenPanelMenuItem Text="PM Monthly Suspense" Path="/reports/lod-pm-monthly-suspense-monitoring-report" />
                <RadzenPanelMenuItem Text="PM Quarterly Status" Path="/reports/lod-pm-quarterly-annual-program-status-report" />
                <RadzenPanelMenuItem Text="RWOA Report" Path="/reports/lod-rwoa-report" />
                <RadzenPanelMenuItem Text="SARC Report" Path="/reports/lod-sarc-report" />
                <RadzenPanelMenuItem Text="Statistics" Path="/reports/lod-statistics-report" />
                <RadzenPanelMenuItem Text="Total Count by Process" Path="/reports/lod-total-count-by-process-report" />
            </RadzenPanelMenuItem>
            
            <RadzenPanelMenuItem Text="Other Reports" Icon="description" Expanded="false">
                <RadzenPanelMenuItem Text="PAL Documents" Path="/reports/pal-documents" />
                <RadzenPanelMenuItem Text="PH Totals" Path="/reports/ph-totals-report" />
                <RadzenPanelMenuItem Text="P-Waivers" Path="/reports/p-waivers-report" />
                <RadzenPanelMenuItem Text="RS Disposition" Path="/reports/rs-disposition-report" />
                <RadzenPanelMenuItem Text="RFA Cases by Unit" Path="/reports/rfa-cases-by-unit-report" />
                <RadzenPanelMenuItem Text="RFA Cases by Group" Path="/reports/rfa-cases-by-group-report" />
            </RadzenPanelMenuItem>
        </RadzenPanelMenu>
    </RadzenSidebar>
    
    <RadzenBody Style="background: var(--rz-base-100, #f8f9fa);">
        <div style="padding: 1.5rem 2rem; max-width: 1600px; margin: 0 auto;">
            @Body
        </div>
    </RadzenBody>
</RadzenLayout>

@code {
    private bool _sidebarExpanded = true;
}
