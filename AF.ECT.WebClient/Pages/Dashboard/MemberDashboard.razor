@page "/member-dashboard"
@layout AF.ECT.WebClient.Layout.MemberLayout
@inject NavigationManager NavigationManager

<div class="px-6 lg:px-12 py-8 max-w-[1440px] mx-auto w-full">
    <!-- Page Header & Title -->
    <div class="flex flex-col md:flex-row md:items-end justify-between gap-4 mb-8">
        <div>
            <h2 class="text-3xl font-extrabold tracking-tight mb-2">Dashboard Overview</h2>
            <p class="text-[#4b739b] dark:text-gray-400 max-w-2xl text-sm leading-relaxed">
                Monitor Line of Duty determinations, MEDCON requests, and INCAP Pay processing in accordance with DAFI 36-2910.
                Manage timelines and appeals for RegAF, AFR, and ANG components.
            </p>
        </div>
        <div class="flex gap-3">
            <button @onclick="ExportReport" class="flex items-center gap-2 px-4 py-2 bg-white dark:bg-[#2b3a4a] border border-[#cfdbe8] dark:border-[#3e4c5a] rounded-lg text-sm font-medium hover:bg-gray-50 dark:hover:bg-[#324252] transition-colors shadow-sm">
                <span class="material-symbols-outlined text-[20px]">download</span>
                Export Report
            </button>
            <button @onclick="NavigateToNewCase" class="flex items-center gap-2 px-4 py-2 bg-primary hover:bg-blue-600 text-white rounded-lg text-sm font-medium shadow-sm transition-colors">
                <span class="material-symbols-outlined text-[20px]">add</span>
                New Case
            </button>
        </div>
    </div>
    <!-- Alert Banner -->
    @if (ShowAlert)
    {
        <div class="mb-8 rounded-lg border-l-4 border-amber-500 bg-amber-50 dark:bg-amber-900/20 p-4 shadow-sm flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
            <div class="flex items-start gap-3">
                <span class="material-symbols-outlined text-amber-600 dark:text-amber-500 mt-0.5">warning</span>
                <div>
                    <h3 class="text-sm font-bold text-amber-900 dark:text-amber-100">Critical Actions Required</h3>
                    <p class="text-sm text-amber-800 dark:text-amber-200/80 mt-0.5">@AlertCount Member Appeals are expiring within 48 hours. Immediate review suggested.</p>
                </div>
            </div>
            <button @onclick="ReviewAppeals" class="text-sm font-semibold text-amber-700 dark:text-amber-400 hover:text-amber-900 dark:hover:text-amber-300 underline underline-offset-2">Review Appeals</button>
        </div>
    }
    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
        <div class="bg-white dark:bg-[#1a2632] p-5 rounded-xl border border-[#cfdbe8] dark:border-[#2b3a4a] shadow-sm hover:shadow-md transition-shadow cursor-pointer" @onclick="@(() => ActiveTab = "Overview")">
            <div class="flex items-center justify-between mb-2">
                <p class="text-[#4b739b] dark:text-gray-400 text-sm font-medium">Pending Cases</p>
                <span class="material-symbols-outlined text-[#4b739b] dark:text-gray-500">pending_actions</span>
            </div>
            <div class="flex items-end gap-3">
                <p class="text-3xl font-bold tracking-tight">@PendingCasesCount</p>
                <div class="flex items-center text-emerald-600 dark:text-emerald-400 text-sm font-medium mb-1">
                    <span class="material-symbols-outlined text-[16px]">trending_up</span>
                    <span class="ml-0.5">5%</span>
                </div>
            </div>
        </div>
        <div class="bg-white dark:bg-[#1a2632] p-5 rounded-xl border border-[#cfdbe8] dark:border-[#2b3a4a] shadow-sm hover:shadow-md transition-shadow relative overflow-hidden cursor-pointer" @onclick="@(() => SelectedStatus = "Overdue")">
            <div class="absolute top-0 right-0 w-1 h-full bg-red-500"></div>
            <div class="flex items-center justify-between mb-2">
                <p class="text-[#4b739b] dark:text-gray-400 text-sm font-medium">Overdue (>90 Days)</p>
                <span class="material-symbols-outlined text-red-500">schedule</span>
            </div>
            <div class="flex items-end gap-3">
                <p class="text-3xl font-bold tracking-tight text-[#0d141c] dark:text-white">@OverdueCasesCount</p>
                <span class="text-red-600 dark:text-red-400 text-xs font-semibold bg-red-100 dark:bg-red-900/30 px-2 py-0.5 rounded-full mb-1">Critical</span>
            </div>
        </div>
        <div class="bg-white dark:bg-[#1a2632] p-5 rounded-xl border border-[#cfdbe8] dark:border-[#2b3a4a] shadow-sm hover:shadow-md transition-shadow cursor-pointer" @onclick="ReviewAppeals">
            <div class="flex items-center justify-between mb-2">
                <p class="text-[#4b739b] dark:text-gray-400 text-sm font-medium">Active Appeals</p>
                <span class="material-symbols-outlined text-[#4b739b] dark:text-gray-500">gavel</span>
            </div>
            <div class="flex items-end gap-3">
                <p class="text-3xl font-bold tracking-tight">@ActiveAppealsCount</p>
                <span class="text-amber-600 dark:text-amber-400 text-xs font-semibold bg-amber-100 dark:bg-amber-900/30 px-2 py-0.5 rounded-full mb-1">Needs Action</span>
            </div>
        </div>
        <div class="bg-white dark:bg-[#1a2632] p-5 rounded-xl border border-[#cfdbe8] dark:border-[#2b3a4a] shadow-sm hover:shadow-md transition-shadow cursor-pointer" @onclick="@(() => ActiveTab = "MEDCON")">
            <div class="flex items-center justify-between mb-2">
                <p class="text-[#4b739b] dark:text-gray-400 text-sm font-medium">MEDCON Requests</p>
                <span class="material-symbols-outlined text-[#4b739b] dark:text-gray-500">medical_services</span>
            </div>
            <div class="flex items-end gap-3">
                <p class="text-3xl font-bold tracking-tight">@MedconRequestsCount</p>
                <div class="flex items-center text-emerald-600 dark:text-emerald-400 text-sm font-medium mb-1">
                    <span class="material-symbols-outlined text-[16px]">trending_up</span>
                    <span class="ml-0.5">12%</span>
                </div>
            </div>
        </div>
    </div>
    <!-- Tabs Navigation -->
    <div class="border-b border-[#cfdbe8] dark:border-[#2b3a4a] mb-6 overflow-x-auto">
        <nav class="flex space-x-8 min-w-max">
            @foreach (var tab in Tabs)
            {
                <button @onclick="@(() => ActiveTab = tab)" class="@(ActiveTab == tab ? "border-b-2 border-primary text-primary font-bold" : "border-b-2 border-transparent text-[#4b739b] dark:text-gray-400 hover:text-[#0d141c] dark:hover:text-white hover:border-gray-300 font-medium") text-sm py-4 px-1 transition-colors">
                    @tab
                </button>
            }
        </nav>
    </div>
    <!-- Filters Section -->
    <div class="bg-white dark:bg-[#1a2632] p-4 rounded-xl border border-[#cfdbe8] dark:border-[#2b3a4a] shadow-sm mb-6">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
            <label class="flex flex-col gap-1.5">
                <span class="text-xs font-semibold text-[#4b739b] dark:text-gray-400 uppercase tracking-wider">Component</span>
                <div class="relative">
                    <select @bind="SelectedComponent" class="w-full h-11 pl-3 pr-8 bg-background-light dark:bg-[#23303e] border border-[#cfdbe8] dark:border-[#3e4c5a] rounded-lg text-sm focus:ring-primary focus:border-primary appearance-none cursor-pointer">
                        <option value="">All Components</option>
                        <option value="RegAF">RegAF / USSF</option>
                        <option value="AFR">AFR (Reserve)</option>
                        <option value="ANG">ANG (Guard)</option>
                    </select>
                    <span class="absolute right-3 top-3 pointer-events-none text-[#4b739b]">
                        <span class="material-symbols-outlined text-[20px]">expand_more</span>
                    </span>
                </div>
            </label>
            <label class="flex flex-col gap-1.5">
                <span class="text-xs font-semibold text-[#4b739b] dark:text-gray-400 uppercase tracking-wider">Category</span>
                <div class="relative">
                    <select @bind="SelectedCategory" class="w-full h-11 pl-3 pr-8 bg-background-light dark:bg-[#23303e] border border-[#cfdbe8] dark:border-[#3e4c5a] rounded-lg text-sm focus:ring-primary focus:border-primary appearance-none cursor-pointer">
                        <option value="">All Categories</option>
                        <option value="CAT_A">CAT A (Active Duty)</option>
                        <option value="CAT_B">CAT B (Training)</option>
                        <option value="CAT_E">CAT E (Inactive Duty)</option>
                    </select>
                    <span class="absolute right-3 top-3 pointer-events-none text-[#4b739b]">
                        <span class="material-symbols-outlined text-[20px]">expand_more</span>
                    </span>
                </div>
            </label>
            <label class="flex flex-col gap-1.5">
                <span class="text-xs font-semibold text-[#4b739b] dark:text-gray-400 uppercase tracking-wider">Case Status</span>
                <div class="relative">
                    <select @bind="SelectedStatus" class="w-full h-11 pl-3 pr-8 bg-background-light dark:bg-[#23303e] border border-[#cfdbe8] dark:border-[#3e4c5a] rounded-lg text-sm focus:ring-primary focus:border-primary appearance-none cursor-pointer">
                        <option value="">Any Status</option>
                        <option value="Pending">Pending Review</option>
                        <option value="Investigation">Under Investigation</option>
                        <option value="Appealed">Appealed</option>
                        <option value="Overdue">Overdue</option>
                        <option value="Closed">Closed</option>
                    </select>
                    <span class="absolute right-3 top-3 pointer-events-none text-[#4b739b]">
                        <span class="material-symbols-outlined text-[20px]">expand_more</span>
                    </span>
                </div>
            </label>
            <div class="flex gap-2">
                <button @onclick="ApplyFilters" class="flex-1 h-11 flex items-center justify-center gap-2 bg-primary text-white hover:bg-blue-600 rounded-lg text-sm font-medium transition-colors">
                    <span class="material-symbols-outlined text-[20px]">filter_list</span>
                    Apply
                </button>
                <button @onclick="ClearFilters" class="h-11 px-4 flex items-center justify-center bg-[#e7edf3] dark:bg-[#23303e] text-[#0d141c] dark:text-white hover:bg-[#dbe4ed] dark:hover:bg-[#2f4052] rounded-lg text-sm font-medium transition-colors">
                    Clear
                </button>
            </div>
        </div>
    </div>
    <!-- Data Table -->
    <div class="bg-white dark:bg-[#1a2632] rounded-xl border border-[#cfdbe8] dark:border-[#2b3a4a] shadow-sm overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead class="bg-[#f6f7f8] dark:bg-[#23303e] border-b border-[#cfdbe8] dark:border-[#3e4c5a]">
                    <tr>
                        <th class="py-4 px-6 text-xs font-bold text-[#4b739b] dark:text-gray-400 uppercase tracking-wider">Case ID</th>
                        <th class="py-4 px-6 text-xs font-bold text-[#4b739b] dark:text-gray-400 uppercase tracking-wider">Member</th>
                        <th class="py-4 px-6 text-xs font-bold text-[#4b739b] dark:text-gray-400 uppercase tracking-wider">Type / Cat</th>
                        <th class="py-4 px-6 text-xs font-bold text-[#4b739b] dark:text-gray-400 uppercase tracking-wider">Component</th>
                        <th class="py-4 px-6 text-xs font-bold text-[#4b739b] dark:text-gray-400 uppercase tracking-wider">Status</th>
                        <th class="py-4 px-6 text-xs font-bold text-[#4b739b] dark:text-gray-400 uppercase tracking-wider">Timeline</th>
                        <th class="py-4 px-6 text-right text-xs font-bold text-[#4b739b] dark:text-gray-400 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-[#cfdbe8] dark:divide-[#3e4c5a]">
                    @foreach (var caseItem in FilteredCases)
                    {
                        <tr class="hover:bg-gray-50 dark:hover:bg-[#23303e]/50 transition-colors group">
                            <td class="py-4 px-6 text-sm font-medium">
                                <a class="text-primary hover:underline" href="@(caseItem.Type == "MEDCON" ? "/medcon-request" : "/lod-details")">@caseItem.CaseId</a>
                            </td>
                            <td class="py-4 px-6">
                                <div class="flex flex-col">
                                    <span class="text-sm font-semibold text-[#0d141c] dark:text-white">@caseItem.MemberName</span>
                                    <span class="text-xs text-[#4b739b] dark:text-gray-400">@caseItem.Unit</span>
                                </div>
                            </td>
                            <td class="py-4 px-6">
                                <div class="flex flex-col gap-1">
                                    <span class="text-sm">@caseItem.Type</span>
                                    <span class="inline-flex w-fit items-center px-1.5 py-0.5 rounded text-[10px] font-medium @GetCategoryClass(caseItem.Category)">@caseItem.Category</span>
                                </div>
                            </td>
                            <td class="py-4 px-6 text-sm text-[#4b739b] dark:text-gray-400">@caseItem.Component</td>
                            <td class="py-4 px-6">
                                <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium @GetStatusClass(caseItem.Status)">
                                    <span class="size-1.5 rounded-full @GetStatusDotClass(caseItem.Status)"></span>
                                    @caseItem.Status
                                </span>
                            </td>
                            <td class="py-4 px-6">
                                <div class="flex items-center gap-2">
                                    @if (caseItem.IsOverdue)
                                    {
                                        <span class="material-symbols-outlined text-red-500 text-[18px]">warning</span>
                                        <span class="text-sm font-bold text-red-600 dark:text-red-400">@caseItem.DaysCount Days</span>
                                    }
                                    else
                                    {
                                        <span class="text-sm font-medium text-[#0d141c] dark:text-white">@caseItem.DaysCount Days Left</span>
                                    }
                                </div>
                                <span class="text-xs text-[#4b739b]">@caseItem.TimelineNote</span>
                            </td>
                            <td class="py-4 px-6 text-right">
                                <button @onclick="@(() => ShowCaseMenu(caseItem.CaseId))" class="text-[#4b739b] hover:text-primary dark:hover:text-white transition-colors p-2 rounded-full hover:bg-gray-100 dark:hover:bg-gray-700">
                                    <span class="material-symbols-outlined">more_vert</span>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- Table Footer / Pagination -->
        <div class="px-6 py-4 border-t border-[#cfdbe8] dark:border-[#3e4c5a] flex items-center justify-between bg-[#f6f7f8] dark:bg-[#23303e]">
            <p class="text-sm text-[#4b739b] dark:text-gray-400">Showing <span class="font-medium text-[#0d141c] dark:text-white">@StartIndex-@EndIndex</span> of <span class="font-medium text-[#0d141c] dark:text-white">@TotalCases</span> cases</p>
            <div class="flex items-center gap-2">
                <button @onclick="PreviousPage" disabled="@(CurrentPage <= 1)" class="size-8 flex items-center justify-center rounded border border-[#cfdbe8] dark:border-[#3e4c5a] bg-white dark:bg-[#2b3a4a] text-[#4b739b] dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-[#324252] disabled:opacity-50 disabled:cursor-not-allowed">
                    <span class="material-symbols-outlined text-[18px]">chevron_left</span>
                </button>
                <span class="text-sm text-[#4b739b]">Page @CurrentPage of @TotalPages</span>
                <button @onclick="NextPage" disabled="@(CurrentPage >= TotalPages)" class="size-8 flex items-center justify-center rounded border border-[#cfdbe8] dark:border-[#3e4c5a] bg-white dark:bg-[#2b3a4a] text-[#4b739b] dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-[#324252] disabled:opacity-50 disabled:cursor-not-allowed">
                    <span class="material-symbols-outlined text-[18px]">chevron_right</span>
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    // Tab State
    private string ActiveTab { get; set; } = "Overview";
    private string[] Tabs = { "Overview", "Informal LOD", "Formal LOD", "Death LOD", "MEDCON", "INCAP Pay" };
    
    // Filter State
    private string SelectedComponent { get; set; } = "";
    private string SelectedCategory { get; set; } = "";
    private string SelectedStatus { get; set; } = "";
    
    // Pagination State
    private int CurrentPage { get; set; } = 1;
    private int PageSize { get; set; } = 5;
    
    // Alert State
    private bool ShowAlert { get; set; } = true;
    private int AlertCount { get; set; } = 3;
    
    // Dashboard Metrics
    private int PendingCasesCount { get; set; } = 142;
    private int OverdueCasesCount { get; set; } = 12;
    private int ActiveAppealsCount { get; set; } = 5;
    private int MedconRequestsCount { get; set; } = 38;
    
    // Sample Data
    private List<CaseItem> AllCases = new()
    {
        new CaseItem { CaseId = "LOD-2023-891", MemberName = "SrA John Doe", Unit = "302nd Airlift Wing", Type = "Informal LOD", Category = "CAT B", Component = "ANG", Status = "Pending Review", DaysCount = 88, TimelineNote = "Due in 2 days", IsOverdue = true },
        new CaseItem { CaseId = "MED-2023-442", MemberName = "Capt Jane Smith", Unit = "1st Fighter Wing", Type = "MEDCON", Category = "CAT A", Component = "RegAF", Status = "Appeal Open", DaysCount = 15, TimelineNote = "To appeal decision", IsOverdue = false },
        new CaseItem { CaseId = "LOD-2023-756", MemberName = "TSgt Michael Brown", Unit = "89th Airlift Wing", Type = "Formal LOD", Category = "CAT A", Component = "RegAF", Status = "Under Investigation", DaysCount = 45, TimelineNote = "Investigation ongoing", IsOverdue = false },
        new CaseItem { CaseId = "LOD-2023-623", MemberName = "SSgt Emily Davis", Unit = "55th Wing", Type = "Informal LOD", Category = "CAT E", Component = "AFR", Status = "Pending Review", DaysCount = 30, TimelineNote = "Awaiting medical review", IsOverdue = false },
        new CaseItem { CaseId = "MED-2023-891", MemberName = "A1C Robert Wilson", Unit = "366th Fighter Wing", Type = "MEDCON", Category = "CAT B", Component = "ANG", Status = "Closed", DaysCount = 0, TimelineNote = "Completed", IsOverdue = false },
    };
    
    // Computed Properties
    private List<CaseItem> FilteredCases => AllCases
        .Where(c => string.IsNullOrEmpty(SelectedComponent) || c.Component == SelectedComponent)
        .Where(c => string.IsNullOrEmpty(SelectedCategory) || c.Category == SelectedCategory)
        .Where(c => string.IsNullOrEmpty(SelectedStatus) || c.Status.Contains(SelectedStatus) || (SelectedStatus == "Overdue" && c.IsOverdue))
        .Skip((CurrentPage - 1) * PageSize)
        .Take(PageSize)
        .ToList();
    
    private int TotalCases => AllCases.Count;
    private int TotalPages => (int)Math.Ceiling((double)TotalCases / PageSize);
    private int StartIndex => (CurrentPage - 1) * PageSize + 1;
    private int EndIndex => Math.Min(CurrentPage * PageSize, TotalCases);
    
    // Event Handlers
    private void NavigateToNewCase() => NavigationManager.NavigateTo("/medcon-request");
    
    private void ExportReport()
    {
        // In production, this would trigger a file download
        Console.WriteLine("Exporting report...");
    }
    
    private void ReviewAppeals()
    {
        SelectedStatus = "Appealed";
        ShowAlert = false;
        StateHasChanged();
    }
    
    private void ApplyFilters()
    {
        CurrentPage = 1;
        StateHasChanged();
    }
    
    private void ClearFilters()
    {
        SelectedComponent = "";
        SelectedCategory = "";
        SelectedStatus = "";
        CurrentPage = 1;
        StateHasChanged();
    }
    
    private void PreviousPage()
    {
        if (CurrentPage > 1)
        {
            CurrentPage--;
        }
    }
    
    private void NextPage()
    {
        if (CurrentPage < TotalPages)
        {
            CurrentPage++;
        }
    }
    
    private void ShowCaseMenu(string caseId)
    {
        // In production, this would show a dropdown menu
        Console.WriteLine($"Showing menu for case: {caseId}");
    }
    
    // Helper Methods
    private string GetCategoryClass(string category) => category switch
    {
        "CAT A" => "bg-blue-50 dark:bg-blue-900/20 text-blue-700 dark:text-blue-300",
        "CAT B" => "bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300",
        "CAT E" => "bg-purple-50 dark:bg-purple-900/20 text-purple-700 dark:text-purple-300",
        _ => "bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300"
    };
    
    private string GetStatusClass(string status) => status switch
    {
        "Pending Review" => "bg-amber-100 dark:bg-amber-900/30 text-amber-800 dark:text-amber-300 border border-amber-200 dark:border-amber-800/30",
        "Appeal Open" => "bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-300 border border-red-200 dark:border-red-800/30",
        "Under Investigation" => "bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 border border-blue-200 dark:border-blue-800/30",
        "Closed" => "bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300 border border-green-200 dark:border-green-800/30",
        _ => "bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300"
    };
    
    private string GetStatusDotClass(string status) => status switch
    {
        "Pending Review" => "bg-amber-500",
        "Appeal Open" => "bg-red-500",
        "Under Investigation" => "bg-blue-500",
        "Closed" => "bg-green-500",
        _ => "bg-gray-500"
    };
    
    // Data Model
    private class CaseItem
    {
        public string CaseId { get; set; } = "";
        public string MemberName { get; set; } = "";
        public string Unit { get; set; } = "";
        public string Type { get; set; } = "";
        public string Category { get; set; } = "";
        public string Component { get; set; } = "";
        public string Status { get; set; } = "";
        public int DaysCount { get; set; }
        public string TimelineNote { get; set; } = "";
        public bool IsOverdue { get; set; }
    }
}
