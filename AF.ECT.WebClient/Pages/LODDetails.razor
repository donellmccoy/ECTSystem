@page "/lod-details"
@page "/lod-details/{CaseId}"
@layout AF.ECT.WebClient.Layout.MemberLayout
@inject NavigationManager NavigationManager

<div class="max-w-[1600px] w-full mx-auto p-6 lg:px-10">
    <!-- Breadcrumbs -->
    <div class="flex items-center gap-2 mb-6 text-sm">
        <a class="text-slate-500 hover:text-primary" href="/member-dashboard">Home</a>
        <span class="text-slate-400 material-symbols-outlined text-[16px]">chevron_right</span>
        <a class="text-slate-500 hover:text-primary" href="/member-dashboard">Cases</a>
        <span class="text-slate-400 material-symbols-outlined text-[16px]">chevron_right</span>
        <span class="text-slate-900 dark:text-white font-medium">LOD #@CurrentCaseId</span>
    </div>
    
    @if (!string.IsNullOrEmpty(StatusMessage))
    {
        <div class="@(IsError ? "bg-red-50 dark:bg-red-900/20 border-red-500 text-red-700 dark:text-red-200" : "bg-green-50 dark:bg-green-900/20 border-green-500 text-green-700 dark:text-green-200") border-l-4 p-4 rounded-r-lg mb-6">
            <div class="flex items-center">
                <span class="material-symbols-outlined mr-2">@(IsError ? "error" : "check_circle")</span>
                <p class="text-sm">@StatusMessage</p>
            </div>
        </div>
    }
    
    <!-- Case Header / Command Bar -->
    <div class="bg-white dark:bg-[#1f2937] rounded-lg shadow-sm border border-slate-200 dark:border-slate-700 p-6 mb-6">
        <div class="flex flex-col md:flex-row justify-between md:items-start gap-6">
            <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                    <h1 class="text-2xl font-bold text-slate-900 dark:text-white">@MemberName</h1>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @GetStatusBadgeClass(CaseStatus)">
                        @CaseStatus
                    </span>
                </div>
                <div class="flex flex-wrap items-center gap-x-6 gap-y-2 text-sm text-slate-500 dark:text-slate-400">
                    <span class="flex items-center gap-1">
                        <span class="material-symbols-outlined text-[18px]">badge</span>
                        Case ID: #@CurrentCaseId
                    </span>
                    <span class="flex items-center gap-1">
                        <span class="material-symbols-outlined text-[18px]">group</span>
                        Unit: @UnitName
                    </span>
                    <span class="flex items-center gap-1">
                        <span class="material-symbols-outlined text-[18px]">calendar_today</span>
                        Incident Date: @IncidentDate.ToString("dd MMM yyyy")
                    </span>
                </div>
            </div>
            <!-- Toolbar Actions -->
            <div class="flex flex-wrap items-center gap-3">
                <button @onclick="PrintCase" class="flex items-center justify-center h-10 px-4 rounded-lg border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-800 text-slate-700 dark:text-slate-200 hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors text-sm font-semibold">
                    <span class="material-symbols-outlined text-[20px] mr-2">print</span>
                    Print
                </button>
                <button @onclick="EditCase" class="flex items-center justify-center h-10 px-4 rounded-lg border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-800 text-slate-700 dark:text-slate-200 hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors text-sm font-semibold">
                    <span class="material-symbols-outlined text-[20px] mr-2">edit</span>
                    Edit
                </button>
                <div class="w-px h-8 bg-slate-200 dark:bg-slate-700 mx-1"></div>
                <button @onclick="SubmitDetermination" disabled="@IsSubmitting" class="flex items-center justify-center h-10 px-5 rounded-lg bg-primary hover:bg-blue-600 text-white shadow-sm transition-colors text-sm font-bold tracking-wide disabled:opacity-50 disabled:cursor-not-allowed">
                    @if (IsSubmitting)
                    {
                        <span class="animate-spin mr-2">⟳</span>
                    }
                    else
                    {
                        <span class="material-symbols-outlined text-[20px] mr-2">send</span>
                    }
                    Submit Determination
                </button>
            </div>
        </div>
    </div>
    <!-- Tabs (Pivot Navigation) -->
    <div class="border-b border-slate-200 dark:border-slate-700 mb-8 overflow-x-auto">
        <nav aria-label="Tabs" class="flex gap-8 min-w-max">
            @foreach (var tab in Tabs)
            {
                <button @onclick="@(() => ActiveTab = tab.Name)" class="@(ActiveTab == tab.Name ? "border-b-2 border-primary text-primary font-semibold" : "border-b-2 border-transparent text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-200 hover:border-slate-300 font-medium") px-1 py-4 text-sm transition-all">
                    @tab.Name
                    @if (tab.Count > 0)
                    {
                        <span class="ml-1 bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 py-0.5 px-2 rounded-full text-xs">@tab.Count</span>
                    }
                </button>
            }
        </nav>
    </div>
    <!-- Content Layout -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Left Column: Main Info -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Member Details Card -->
            <section class="bg-white dark:bg-[#1f2937] rounded-lg shadow-sm border border-slate-200 dark:border-slate-700 p-6">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-lg font-bold text-slate-900 dark:text-white flex items-center gap-2">
                        <span class="material-symbols-outlined text-slate-400">person</span>
                        Member Details
                    </h3>
                    <a class="text-primary text-sm font-medium hover:underline cursor-pointer" @onclick="ViewFullProfile">View Full Profile</a>
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
                    <div>
                        <p class="text-xs font-medium text-slate-500 uppercase tracking-wider mb-1">Rank</p>
                        <p class="text-sm font-semibold text-slate-900 dark:text-white">@Rank</p>
                    </div>
                    <div>
                        <p class="text-xs font-medium text-slate-500 uppercase tracking-wider mb-1">MOS</p>
                        <p class="text-sm font-semibold text-slate-900 dark:text-white">@MOS</p>
                    </div>
                    <div>
                        <p class="text-xs font-medium text-slate-500 uppercase tracking-wider mb-1">DoD ID</p>
                        <p class="text-sm font-semibold text-slate-900 dark:text-white">@DoDID</p>
                    </div>
                    <div>
                        <p class="text-xs font-medium text-slate-500 uppercase tracking-wider mb-1">Duty Status</p>
                        <p class="text-sm font-semibold text-slate-900 dark:text-white">@DutyStatus</p>
                    </div>
                    <div>
                        <p class="text-xs font-medium text-slate-500 uppercase tracking-wider mb-1">Unit of Assignment</p>
                        <p class="text-sm font-semibold text-slate-900 dark:text-white">@UnitOfAssignment</p>
                    </div>
                    <div>
                        <p class="text-xs font-medium text-slate-500 uppercase tracking-wider mb-1">Phone</p>
                        <p class="text-sm font-semibold text-slate-900 dark:text-white">@Phone</p>
                    </div>
                </div>
            </section>
            <!-- Incident Narrative -->
            <section class="bg-white dark:bg-[#1f2937] rounded-lg shadow-sm border border-slate-200 dark:border-slate-700 p-6">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-bold text-slate-900 dark:text-white flex items-center gap-2">
                        <span class="material-symbols-outlined text-slate-400">description</span>
                        Incident Summary
                    </h3>
                </div>
                <div class="prose prose-sm max-w-none text-slate-600 dark:text-slate-300">
                    @foreach (var paragraph in IncidentNarrative)
                    {
                        <p class="mb-4">@paragraph</p>
                    }
                </div>
                <div class="mt-6 pt-6 border-t border-slate-100 dark:border-slate-800 flex gap-6">
                    <div>
                        <p class="text-xs font-medium text-slate-500 mb-1">Location</p>
                        <p class="text-sm font-medium text-slate-900 dark:text-white flex items-center gap-1">
                            <span class="material-symbols-outlined text-[16px] text-slate-400">location_on</span>
                            @IncidentLocation
                        </p>
                    </div>
                    <div>
                        <p class="text-xs font-medium text-slate-500 mb-1">Witness</p>
                        <p class="text-sm font-medium text-slate-900 dark:text-white">@Witness</p>
                    </div>
                </div>
            </section>
        </div>
        <!-- Right Column: Sidebar -->
        <div class="space-y-6">
            <!-- Status Timeline -->
            <section class="bg-white dark:bg-[#1f2937] rounded-lg shadow-sm border border-slate-200 dark:border-slate-700 p-6">
                <h3 class="text-base font-bold text-slate-900 dark:text-white mb-6">Case Progress</h3>
                <div class="relative pl-2">
                    @foreach (var step in ProgressSteps)
                    {
                        <div class="flex gap-4 @(step != ProgressSteps.Last() ? "mb-6" : "")">
                            <div class="flex flex-col items-center">
                                <div class="w-6 h-6 rounded-full @GetStepClass(step) flex items-center justify-center z-10 @(step.Status == "Current" ? "ring-4 ring-white dark:ring-[#1f2937]" : "")">
                                    @if (step.Status == "Completed")
                                    {
                                        <span class="material-symbols-outlined text-[16px] font-bold">check</span>
                                    }
                                    else if (step.Status == "Current")
                                    {
                                        <span class="material-symbols-outlined text-[16px] font-bold">schedule</span>
                                    }
                                </div>
                                @if (step != ProgressSteps.Last())
                                {
                                    <div class="w-0.5 bg-slate-200 dark:bg-slate-700 h-full absolute top-6 left-[19px] -ml-px -z-0"></div>
                                }
                            </div>
                            <div>
                                <p class="text-sm @(step.Status == "Pending" ? "text-slate-400 dark:text-slate-500" : "font-semibold text-slate-900 dark:text-white")">@step.Title</p>
                                <p class="text-xs @(step.Status == "Current" ? "text-primary font-medium" : "text-slate-500")">@step.Subtitle</p>
                            </div>
                        </div>
                    }
                </div>
            </section>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string? CaseId { get; set; }
    
    // UI State
    private string ActiveTab { get; set; } = "Overview";
    private bool IsSubmitting { get; set; }
    private string StatusMessage { get; set; } = string.Empty;
    private bool IsError { get; set; }
    
    // Case Data (would come from a service in production)
    private string CurrentCaseId => CaseId ?? "2023-8492";
    private string MemberName { get; set; } = "SGT Miller, John";
    private string CaseStatus { get; set; } = "Pending Review";
    private string UnitName { get; set; } = "1st BCT, 10th Mountain Div";
    private DateTime IncidentDate { get; set; } = new DateTime(2023, 10, 12);
    
    // Member Details
    private string Rank { get; set; } = "SGT / E-5";
    private string MOS { get; set; } = "11B - Infantryman";
    private string DoDID { get; set; } = "1049284921";
    private string DutyStatus { get; set; } = "Active Duty";
    private string UnitOfAssignment { get; set; } = "HHC, 1-87 IN";
    private string Phone { get; set; } = "(555) 123-4567";
    
    // Incident Details
    private string IncidentLocation { get; set; } = "Magrath Sports Complex Trail";
    private string Witness { get; set; } = "SSG Davis, Mark";
    private string[] IncidentNarrative = new[]
    {
        "On 12 Oct 2023, SGT Miller was participating in a scheduled unit physical training exercise (Release Run). Approximately 2 miles into the route, SGT Miller stepped into a depression on the unpaved trail, causing his right ankle to roll significantly.",
        "He was immediately assisted by CLS personnel on site and transported to the Troop Medical Clinic (TMC). Initial X-rays confirmed a Grade 2 sprain. This injury occurred while on duty and in the performance of prescribed duties. No misconduct or negligence is suspected."
    };
    
    // Tabs
    private List<TabItem> Tabs = new()
    {
        new TabItem { Name = "Overview", Count = 0 },
        new TabItem { Name = "Member Data", Count = 0 },
        new TabItem { Name = "Medical", Count = 0 },
        new TabItem { Name = "Investigation", Count = 0 },
        new TabItem { Name = "Documents", Count = 4 },
        new TabItem { Name = "History", Count = 0 }
    };
    
    // Progress Steps
    private List<ProgressStep> ProgressSteps = new()
    {
        new ProgressStep { Title = "Initiated", Subtitle = "10 Oct 2023 • CPT Johnson", Status = "Completed" },
        new ProgressStep { Title = "Medical Review", Subtitle = "12 Oct 2023 • MAJ Williams (MC)", Status = "Completed" },
        new ProgressStep { Title = "Commander Review", Subtitle = "In Progress", Status = "Current" },
        new ProgressStep { Title = "Final Determination", Subtitle = "Pending", Status = "Pending" }
    };
    
    // Event Handlers
    private void PrintCase()
    {
        // In production, this would trigger window.print() via JS interop
        StatusMessage = "Print dialog opened.";
        IsError = false;
    }
    
    private void EditCase()
    {
        // Navigate to edit mode or show edit form
        StatusMessage = "Edit mode activated. You can now modify case details.";
        IsError = false;
    }
    
    private void ViewFullProfile()
    {
        // Navigate to member profile
        Console.WriteLine("Navigating to full profile...");
    }
    
    private async Task SubmitDetermination()
    {
        IsSubmitting = true;
        StatusMessage = string.Empty;
        StateHasChanged();
        
        try
        {
            // Simulate API call
            await Task.Delay(1500);
            
            CaseStatus = "Submitted";
            StatusMessage = "Determination submitted successfully. The case is now pending final approval.";
            IsError = false;
            
            // Update progress steps
            ProgressSteps[2].Status = "Completed";
            ProgressSteps[2].Subtitle = $"{DateTime.Now:dd MMM yyyy} • Current User";
            ProgressSteps[3].Status = "Current";
            ProgressSteps[3].Subtitle = "Awaiting approval";
        }
        catch (Exception ex)
        {
            StatusMessage = "Error submitting determination: " + ex.Message;
            IsError = true;
        }
        finally
        {
            IsSubmitting = false;
        }
    }
    
    // Helper Methods
    private string GetStatusBadgeClass(string status) => status switch
    {
        "Pending Review" => "bg-amber-100 text-amber-800 dark:bg-amber-900 dark:text-amber-200 border border-amber-200 dark:border-amber-800",
        "Submitted" => "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 border border-blue-200 dark:border-blue-800",
        "Approved" => "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200 border border-green-200 dark:border-green-800",
        "Rejected" => "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200 border border-red-200 dark:border-red-800",
        _ => "bg-slate-100 text-slate-800 dark:bg-slate-700 dark:text-slate-200"
    };
    
    private string GetStepClass(ProgressStep step) => step.Status switch
    {
        "Completed" => "bg-green-100 dark:bg-green-900 text-green-600 dark:text-green-400",
        "Current" => "bg-amber-100 dark:bg-amber-900 text-amber-600 dark:text-amber-400",
        "Pending" => "border-2 border-slate-200 dark:border-slate-600 bg-white dark:bg-[#1f2937]",
        _ => "bg-slate-100 text-slate-600"
    };
    
    // Data Models
    private class TabItem
    {
        public string Name { get; set; } = "";
        public int Count { get; set; }
    }
    
    private class ProgressStep
    {
        public string Title { get; set; } = "";
        public string Subtitle { get; set; } = "";
        public string Status { get; set; } = "Pending";
    }
}
