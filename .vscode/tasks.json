{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/ECTSystem.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary", 
                "/m:8"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/AF.ECT.AppHost"
            ],
            "isBackground": true,
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "watch-hot-reload",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Set-Location '${workspaceFolder}/AF.ECT.WebClient'; dotnet watch run"
            ],
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Building.*$",
                    "endsPattern": "^.*Now listening on.*$"
                }
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "launch-aspire-restart-on-change",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Set-Location '${workspaceFolder}/AF.ECT.AppHost'; $env:DOTNET_WATCH_RESTART_ON_RUDE_EDIT = 'true'; dotnet watch run --no-hot-reload"
            ],
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Building.*$",
                    "endsPattern": "^.*Now listening on.*$"
                }
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "cleanup-and-build ECTSystem solution",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Stop-Process -Name 'dotnet' -Force -ErrorAction SilentlyContinue; dotnet clean ECTSystem.sln; dotnet build ECTSystem.sln /property:GenerateFullPaths=true /consoleloggerparameters:NoSummary /m:8"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "cleanup-and-build ECTSystem.Database solution",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Stop-Process -Name 'dotnet' -Force -ErrorAction SilentlyContinue; dotnet clean ECTSystem.Database.sln; dotnet build ECTSystem.Database.sln --no-restore /property:GenerateFullPaths=true /consoleloggerparameters:NoSummary /m:8"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "launch-site",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Set-Location '${workspaceFolder}/AF.ECT.AppHost'; dotnet run"
            ],
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Building.*$",
                    "endsPattern": "^.*Now listening on.*$"
                }
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "launch-site-with-browser",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Set-Location '${workspaceFolder}/AF.ECT.AppHost'; Start-Process dotnet -ArgumentList 'run' -PassThru; Start-Sleep -Seconds 15; Start-Process 'msedge' -ArgumentList 'https://localhost:17258'"
            ],
            "isBackground": true,
            "problemMatcher": [],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}