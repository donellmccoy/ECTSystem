{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/ECTSystem.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary", 
                "/m:8"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--no-hot-reload",
                "--project",
                "${workspaceFolder}/AF.ECT.AppHost"
            ],
            "isBackground": true,
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "cleanup-and-build ECTSystem solution",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Stop-Process -Name 'dotnet' -Force -ErrorAction SilentlyContinue; dotnet clean ECTSystem.sln; dotnet build ECTSystem.sln /property:GenerateFullPaths=true /consoleloggerparameters:NoSummary /m:8"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "cleanup-and-build ECTSystem.Database solution",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Stop-Process -Name 'dotnet' -Force -ErrorAction SilentlyContinue; dotnet clean ECTSystem.Database.sln; dotnet build ECTSystem.Database.sln --no-restore /property:GenerateFullPaths=true /consoleloggerparameters:NoSummary /m:8"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "monitor-agent",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoExit",
                "-NoProfile",
                "-File",
                "${workspaceFolder}/Scripts/Monitor-Agent.ps1"
            ],
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "view-agent-logs",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoExit",
                "-NoProfile",
                "-File",
                "${workspaceFolder}/Scripts/View-AgentLogs.ps1"
            ],
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "check-agent-status",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-File",
                "${workspaceFolder}/Scripts/Check-AgentStatus.ps1"
            ],
            "problemMatcher": []
        }
    ]
}